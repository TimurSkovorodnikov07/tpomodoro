#!/bin/bash
needDrawing=$1

# https://patorjk.com
echo "
  _______ _____                          _                 
 |__   __|  __ \                        | |                
    | |  | |__) |__  _ __ ___   ___   __| | ___  _ __ ___  
    | |  |  ___/ _ \| '_ \` _ \ / _ \ / _\` |/ _ \| '__/ _ \ 
    | |  | |  | (_) | | | | | | (_) | (_| | (_) | | | (_) |
    |_|  |_|   \___/|_| |_| |_|\___/ \__,_|\___/|_|  \___/ 
                                                           
                                                           
"
# Определение пути к каталогу скрипта
SCRIPT_DIR=$(dirname "$(realpath "$0")")

# Переход в каталог проекта
cd "$SCRIPT_DIR" || exit
dotnet run -- "$needDrawing"
